mixin variant-color()
	-var i = 0
	.variant-selector(data-role='variant-selector' data-priority='0' data-tooltip='Please select a season')
		select(data-role='variant' data-priority='0' data-pick="0")
			for variant in variantColor.color
				-i=i+1	
				if (i==1)
					option(value='#{variant}' disabled selected) #{variant}
				else
					option(value='#{variant}') #{variant}
mixin variant()
