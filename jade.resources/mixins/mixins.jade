mixin contentBox(content, title, buttonText, image)
	if content == 'banner'
		a(href='#')
			if title				
				img(src='http://placehold.it/#{title}')
			else
				img(src='http://placehold.it/370x370/FAFAFA/000000')		
	else
		if title
			h3.title
				a(href='#')= title
		if image				
				img(src='http://placehold.it/#{image}')
			else
				img(src='http://placehold.it/370x370/FAFAFA/000000')		
		div.content
			if block
				block
		if buttonText
			a.button(href='#')= buttonText

mixin product-list(arg)
	-var i = 0
	for product in products		
		if (i < arg)
			-i=i+1
			.item
				.product-box
					a(href='product.html')
						img(src='http://placehold.it/370x370/FAFAFA/000000' class='product-item-image img-responsive')
						span.product-item-title #{product.name} 
						span.product-item-price #{product.promo} <sup> RON </sup>
						span.product-item-old-price #{product.price} <sup> RON </sup>
						span.product-item-button= cta
mixin filter-size()
	for product in products
		li
			a(href='#') #{product.size}
mixin variant-size(arg)
	-var i=0
	.variant-selector(data-role='variant-selector' data-priority='0' data-tooltip='Please select a size')
		ul
			for variant in variantSize.size
				-i=i+1		
				li
					if (i==arg)
						a(href='#' data-role='variant' data-value="#{variant}" data-pick="1") #{variant}
					else
						a(href='#' data-role='variant' data-value="#{variant}" data-pick="0") #{variant}
